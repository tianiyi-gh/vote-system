<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dzvote.voting.mapper.VoteLimitMapper">
    
    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.dzvote.voting.entity.VoteLimit">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="activity_id" property="activityId" jdbcType="BIGINT"/>
        <result column="voter_phone" property="voterPhone" jdbcType="VARCHAR"/>
        <result column="voter_ip" property="voterIp" jdbcType="VARCHAR"/>
        <result column="vote_count" property="voteCount" jdbcType="INTEGER"/>
        <result column="last_vote_time" property="lastVoteTime" jdbcType="TIMESTAMP"/>
        <result column="created_at" property="createdAt" jdbcType="TIMESTAMP"/>
    </resultMap>
    
    <!-- 根据活动ID和手机号查询 -->
    <select id="selectByActivityAndPhone" resultMap="BaseResultMap">
        SELECT id, activity_id, voter_phone, voter_ip, vote_count, last_vote_time, created_at
        FROM vote_limits
        WHERE activity_id = #{activityId} AND voter_phone = #{phone}
        LIMIT 1
    </select>
    
    <!-- 插入 -->
    <insert id="insert" parameterType="com.dzvote.voting.entity.VoteLimit" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO vote_limits (
            activity_id, voter_phone, voter_ip, vote_count, last_vote_time, created_at
        ) VALUES (
            #{activityId}, #{voterPhone}, #{voterIp}, #{voteCount}, #{lastVoteTime}, #{createdAt}
        )
    </insert>
    
    <!-- 更新 -->
    <update id="updateById" parameterType="com.dzvote.voting.entity.VoteLimit">
        UPDATE vote_limits
        SET vote_count = #{voteCount},
            voter_ip = #{voterIp},
            last_vote_time = #{lastVoteTime}
        WHERE id = #{id}
    </update>
    
</mapper>
